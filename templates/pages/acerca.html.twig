{% block content %}
	<section class="section bg-grey">
		<div class="container">
			<div class="row px-50">
				<div class="col-12 text-center">
					<p>
						<img src="{{asset('images/cmdnl-logo-sm.png')}}" class="img-fluid verflow-hidden" data-aos="fade-up">
